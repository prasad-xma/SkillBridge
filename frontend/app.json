{
  "expo": {
    "scheme": "skillbridge",
    "name": "SkillBridge",
    "slug": "frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/logo_light.png",
    "userInterfaceStyle": "light",
    "extra": {
      "API_BASE": "http://192.168.1.3:5000",
      "APP_THEME": "light"
    },
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo/logo_light.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/logo_dark.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/logo/logo_light.png"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
